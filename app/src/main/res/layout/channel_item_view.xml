<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@color/bacground"
    android:backgroundTint="@color/bacground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:focusable="true"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/card_color"
        android:padding="4dp">

        <ImageView
            android:id="@+id/imageGame"
            android:layout_width="200dp"
            android:layout_height="262dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:srcCompat="@drawable/default_image" />

        <ImageView
            android:id="@+id/play"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            card_view:layout_constraintBottom_toBottomOf="@+id/imageGame"
            card_view:layout_constraintEnd_toEndOf="@+id/imageGame"
            card_view:layout_constraintStart_toStartOf="@+id/imageGame"
            card_view:layout_constraintTop_toTopOf="@+id/imageGame"
            card_view:srcCompat="@drawable/play" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textViewGameName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:gravity="center_horizontal"
        android:text="TextView"
        android:textColor="@color/text_color_tabs"
        android:textSize="24sp" />

</androidx.cardview.widget.CardView>