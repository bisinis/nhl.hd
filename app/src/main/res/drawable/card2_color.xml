<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="4dp" android:color="#FFC448" />
            <solid android:color="@color/color_turn_on_tab" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <stroke android:width="4dp" android:color="#FFC448" />
            <solid android:color="@color/color_turn_on_tab" />
        </shape>
    </item>
    <item android:drawable="@color/color_turn_on_tab" />
</selector>